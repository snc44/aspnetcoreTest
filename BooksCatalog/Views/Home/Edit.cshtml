@model BooksCatalog.Models.Product
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<div class="col-md-6">
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Product_name" class="control-label">Title</label>
            <input type="text" asp-for="Product_name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Manufacturer" class="control-label">Manufacturer</label>
            <input type="text" asp-for="Manufacturer" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Product_price" class="control-label">Price</label>
            <input type="text" asp-for="Product_price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Product_count" class="control-label">Count</label>
            <input type="text" asp-for="Product_count" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Category_id" class="control-label"></label>
            <input type="hidden" asp-for="Category_id" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>


